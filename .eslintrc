{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "angular": false
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "experimentalDecorators": true,
      "legacyDecorators": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2],
    "semi": ["error", "always"]
  }
}
